    <span style="color: #3a81c3; font-weight: bold;">margin</span>: 0;
    <span style="color: #3a81c3; font-weight: bold;">padding</span>: 0;
}
<span style="color: #6c3163; font-weight: bold;">header</span>{
    <span style="color: #3a81c3; font-weight: bold;">border</span>: 2px solid <span style="color: #000000; background-color: #ffffff;">white</span>;
